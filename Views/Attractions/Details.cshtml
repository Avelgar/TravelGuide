@model Attraction

<h1>@Model.Name</h1>

<div class="row">
    <div class="col-md-6">
        <img src="~/@Model.PhotoPath" class="img-fluid" alt="@Model.Name">
    </div>
    <div class="col-md-6">
        <h3>Основная информация</h3>
        <p><strong>Город:</strong> @Model.City.Name</p>
        <p><strong>Часы работы:</strong> @Model.WorkingHours</p>
        @if (Model.EntranceFee.HasValue)
        {
            <p><strong>Стоимость посещения:</strong> @Model.EntranceFee.Value.ToString("C")</p>
        }
        else
        {
            <p><strong>Стоимость посещения:</strong> Бесплатно</p>
        }

        <h3>История</h3>
        <p>@Model.History</p>

        <h3>Описание</h3>
        <p>@Model.Description</p>
    </div>
</div>