@model City

<h1>@Model.Name</h1>

<div class="row">
    <div class="col-md-6">
        <img src="~/@Model.PhotoPath" class="img-fluid" alt="@Model.Name">
    </div>
    <div class="col-md-6">
        <h3>Основная информация</h3>
        <p><strong>Регион:</strong> @Model.Region</p>
        <p><strong>Население:</strong> @Model.Population.ToString("N0")</p>

        <h3>История</h3>
        <p>@Model.History</p>
    </div>
</div>

<h2 class="mt-4">Достопримечательности</h2>

<div class="row">
    @foreach (var attraction in Model.Attractions)
    {
        <div class="col-md-4 mb-4">
            <div class="card">
                <img src="~/@attraction.PhotoPath" class="card-img-top" alt="@attraction.Name">
                <div class="card-body">
                    <h5 class="card-title">@attraction.Name</h5>
                    <p class="card-text">@attraction.Description</p>
                    <a asp-controller="Attractions" asp-action="Details" asp-route-id="@attraction.Id" class="btn btn-primary">Подробнее</a>
                </div>
            </div>
        </div>
    }
</div>